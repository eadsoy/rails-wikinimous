<div>
  <nav class="navbar navbar-light bg-light">
    <%= link_to "Wikinimous", articles_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= link_to "New Article", new_article_path, class: "text-muted" %>
    </button>
  </nav>
</div>

<h2><%= @article.title %></h2>
<p><%= @article.content %></p>


<%= link_to "Destroy this article",
            article_path(@article),
            method: :delete,
            class: "btn btn-danger",
            data: { confirm: 'Are you sure???'} %>

<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-info" %>
